<article class="rental">
  <div class="details">
    <div class="detail">
        <h2>
        {{@employee.name}} {{@employee.surname}}
        </h2>
    </div>
    <div class="detail owner">
      <span>Email:</span> {{@employee.email}}
    </div>
    <div class="detail type">
      <span>Address:</span> {{@employee.address}}
    </div>
    <div class="detail location">
      <span>Salary:</span> {{@employee.salary}}
    </div>
  </div>
    {{#if update}}
    <div>
        <button type="button" class="button1 del" {{on 'click' (fn this.delete @employee.id)}}>
           Delete
        </button>
        <LinkTo @route="update" @model={{@employee}}>
            <button type="button" class="button1 up" {{on 'click' this.updateFlag}}>
                Update
            </button>
        </LinkTo>
    </div>
    {{/if}}
</article>
{{#unless update}}
    
{{/unless}}